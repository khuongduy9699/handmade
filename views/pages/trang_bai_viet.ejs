<html xmlns="http://www.w3.org/1999/xhtml">

<head>
<%- include('../layout/head'); %>
<style>
* {
  box-sizing:border-box
}
h2 {
  text-align: center;
}

</style>


</head>

<body>

<header>
<%- include('../layout/header'); %>
</header>

<main> 
<a href="/"><i class="fas fa-home"></i>Trang Chủ</a><a href="#"> > Trang Bài Viết</a></a>                           
<section id="aa-blog-archive">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-blog-archive-area">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="aa-blog-content">
                                <div class="row">
                                    <% for (var i=0;i<posts.length;i++){%>
                                        <div class="col-md-4 col-sm-4">
                                            <article class="aa-blog-content-single">
                                                                            <h4><a href="/baivietchitiet/<%=posts[i]._id%>"><%=posts[i].tenbv%></a></h4>
																			<p class="desc-posts"><%=posts[i].ngaydang%></p>
                                                                           <figure class="aa-blog-img">
                                                                              <a href="/baivietchitiet/<%=posts[i]._id%>"><img src="/images/post/<%=posts[i].hinh%>" alt="farm products" height="180px" width="300px"></a>
                                                                            </figure>
                                                                            
                                                                            <div class="aa-article-bottom">
                                                                              
                                                                              <div class="aa-post-date"></div>
                                                                            </div>


                                             
                                                <div class="aa-blog-info">
                                                    <span href="#"><i class="fa fa-clock-o"></i><fmt:formatDate
                                                            value="<%=posts[i].ngaydang%>"
                                                            pattern="yyyy-MM-dd HH:mm"/></span>
                                                </div>
                                            </article>
                                        </div>
                                    <%}%>
                                </div>
                            </div>
                            <!-- Blog Pagination -->

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="position-fixed" style="right: 10px; bottom: 10px;"><a href="#top"><i class="fa fa-chevron-circle-up fa-4x"></i></a></div>

</main>

<footer>
<%- include('../layout/footer'); %>
</footer>

</body>

</html>

